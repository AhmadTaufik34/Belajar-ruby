<table border="2">
    <tr>
        <td>Id Buku</td>
        <td>TItle</td>
        <td>Page</td>
        <td>Price</td>
        <td>Description</td>
        <td>Action</td>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.page %></td>
        <td><%= book.price %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Detail', book_path(book) %> |
        <td><%= link_to 'Edit', edit_book_path(book) %> |
        <td><%= link_to 'Hapus', book_path(book), method: :delete, data:{confirm: 'Are you sure?'} %></td>
        </tr>
        <% end %>
</table>
<%= link_to 'New Book', new_book_path %>